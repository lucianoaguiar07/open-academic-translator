{
  "manifest_version": 3,
  "name": "Open Academic Translator",
  "version": "1.0",
  "version_name": "1.0.0-alpha",
  "description": "Tradução simultânea de vídeos educacionais usando tecnologias open-source",
  "permissions": [
    "storage",
    "tabCapture",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "http://localhost:5000/*"  // Adicionei para o LibreTranslate local
  ],
  "action": {
    "default_popup": "src/ui/popup.html",
    "default_icon": {
      "16": "public/icons/icon-16.png",
      "48": "public/icons/icon-48.png",
      "128": "public/icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "css": ["src/ui/subtitles.css"],
    "js": [
      "src/utils/audio-utils.js",    // Separei funcionalidades
      "src/stt/deepspeech-client.js", // Nome mais descritivo
      "src/content.js"
    ]
  }],
  "web_accessible_resources": [{
    "resources": [
      "public/models/*",
      "public/icons/*",
      "src/ui/*.css"
    ],
    "matches": ["*://*.youtube.com/*"],
    "use_dynamic_url": true
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}